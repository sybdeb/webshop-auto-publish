<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cron_validate_products" model="ir.cron">
            <field name="name">Webshop: Valideer producten voor publicatie</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="state">code</field>
            <field name="code">model.cron_validate_products()</field>
            <field name="interval_number">15</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Archive cron removed - now handled by product_supplier_sync import -->
        <!-- See: product_supplier_sync/models/supplier_csv_import.py -->
        <record id="cron_archive_no_suppliers" model="ir.cron">
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>

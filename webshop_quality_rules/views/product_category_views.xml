<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_category_webshop_form" model="ir.ui.view">
            <field name="name">product.category.form.webshop</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Webshop Regels" name="webshop_rules">
                        <group>
                            <group string="Publicatie-instellingen">
                                <field name="auto_publish"/>
                                <field name="price_drop_threshold"/>
                            </group>
                            <group string="Voorraad-instellingen">
                                <field name="min_supplier_stock"/>
                            </group>
                        </group>
                        <group>
                            <group string="Verplichte velden">
                                <field name="require_ean"/>
                                <field name="require_brand"/>
                                <field name="require_short_description"/>
                                <field name="require_long_description"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Behoud oude product.category view voor backward compatibility -->
        <record id="view_product_category_webshop_form" model="ir.ui.view">
            <field name="name">product.category.form.webshop</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="inside">
                    <group string="Webshop Auto-Publish Regels (Legacy - gebruik Website Categorieën)" groups="base.group_user">
                        <group string="Info">
                            <div class="alert alert-warning" role="alert">
                                <strong>Let op:</strong> Deze interne productcategorieën zijn voor boekhouding.
                                Gebruik <strong>Website Categorieën</strong> voor webshop validatieregels.
                            </div>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- Menu item voor interne Product Categorieën (alleen voor admin) -->
        <menuitem id="menu_product_category_config"
                  name="Product Categorieën (Intern)"
                  parent="webshop_catalog_dashboard.menu_webshop_settings"
                  action="product.product_category_action_form"
                  groups="base.group_system"
                  sequence="99"/>
    </data>
</odoo>

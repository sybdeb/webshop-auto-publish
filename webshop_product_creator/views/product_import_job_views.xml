<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Import Job Views -->
    <record id="view_product_import_job_tree" model="ir.ui.view">
        <field name="name">product.import.job.tree</field>
        <field name="model">product.import.job</field>
        <field name="arch" type="xml">
            <list string="Import Jobs" decoration-info="state=='pending'" 
                  decoration-warning="state=='processing'" decoration-success="state=='completed'" 
                  decoration-danger="state=='failed'">
                <field name="name"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='pending'"
                       decoration-warning="state=='processing'"
                       decoration-success="state=='completed'"
                       decoration-danger="state=='failed'"/>
                <field name="error_count"/>
                <field name="products_created"/>
                <field name="products_skipped"/>
                <field name="progress" widget="progressbar"/>
                <field name="user_id"/>
                <field name="create_date"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </list>
        </field>
    </record>

    <record id="view_product_import_job_form" model="ir.ui.view">
        <field name="name">product.import.job.form</field>
        <field name="model">product.import.job</field>
        <field name="arch" type="xml">
            <form string="Import Job">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="pending,processing,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_process_job" type="object" 
                                class="oe_stat_button" icon="fa-play"
                                invisible="state != 'pending'"
                                string="Start Nu"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id" readonly="1"/>
                            <field name="error_count"/>
                        </group>
                        <group>
                            <field name="categ_id"/>
                            <field name="public_categ_ids" widget="many2many_tags"/>
                            <field name="batch_size"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="create_supplier_info"/>
                            <field name="skip_duplicates"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group string="Resultaten" invisible="state == 'pending'">
                        <group>
                            <field name="products_created"/>
                            <field name="products_skipped"/>
                        </group>
                        <group>
                            <field name="progress" widget="progressbar"/>
                        </group>
                    </group>
                    <group string="Foutmelding" invisible="state != 'failed'">
                        <field name="error_message" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Errors" name="errors">
                            <field name="error_ids" readonly="1">
                                <list>
                                    <field name="product_code"/>
                                    <field name="barcode"/>
                                    <field name="product_name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_import_job" model="ir.actions.act_window">
        <field name="name">Import Jobs</field>
        <field name="res_model">product.import.job</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_product_import_jobs"
              name="Import Jobs"
              parent="webshop_catalog_dashboard.menu_webshop_root"
              action="action_product_import_job"
              sequence="20"/>

    <!-- Cron Job -->
    <record id="cron_process_product_import_jobs" model="ir.cron">
        <field name="name">Process Product Import Jobs</field>
        <field name="model_id" ref="model_product_import_job"/>
        <field name="state">code</field>
        <field name="code">model.cron_process_pending_jobs()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
